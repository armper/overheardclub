
entity Topic {
	title String
}

filter Topic

entity Post {
	title String
	content String
    date Instant
}

filter Post

enum RankType {
	HILARIOUS, PATHETIC
}

entity Ranking {
	rankType RankType
	date Instant	
}

relationship ManyToOne {
	Ranking{user} to User
}

relationship OneToMany {
  Post{rank} to Ranking
}

entity Comment {
	content String
    date Instant
}

filter Comment

relationship ManyToOne {
  Comment{rank} to Ranking
}

relationship OneToMany {
	Topic{post} to Post
}

relationship OneToMany {
	Post{comment} to Comment
}

relationship ManyToOne {
	Topic{user} to User
}

relationship ManyToOne {
	Post{user} to User
}

relationship ManyToOne {
	Comment{user} to User
}